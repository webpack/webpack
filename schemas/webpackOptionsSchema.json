      "type": "array",
      "uniqueItems": true
    },
    "common.arrayOfStringValues": {
      "items": {
        "type": "string",
        "minLength": 1
      },
      "type": "array"
    },
    "common.arrayOfStringOrStringArrayValues": {
      "items": {
        "anyOf": [
          {
            "type": "string",
            "minLength": 1
