        "unknownContextRecursive": {
          "type": "boolean"
        },
        "unknownContextCritical": {
          "type": "boolean"
        },
        "exprContextRequest": {
          "type": "string"
        },
        "exprContextRegExp": {
          "instanceof": "RegExp"
        },
        "exprContextRecursive": {
          "type": "boolean"
        },
        "exprContextCritical": {
          "type": "boolean"
        },
        "wrappedContextRegExp": {
          "instanceof": "RegExp"
        },
        "wrappedContextRecursive": {
          "type": "boolean"
        },
        "wrappedContextCritical": {
          "type": "boolean"
        }
